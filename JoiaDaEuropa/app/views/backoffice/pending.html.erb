<div class="container" align="center">

  <div class="text-center">
    <p class="my-title-h1 text-black"><%=t('clients_orders_tittle')%></p>
  </div>

  <ul class="nav nav-pills">
    <li role="presentation"><a href="<%= backoffice_index_path %>"><%=t('all_tittle')%></a></li>
    <li role="presentation" class="active"><a href="<%= backoffice_pending_path %>"><%=t('pending')%></a></li>
    <li role="presentation"><a href="<%= backoffice_cancelled_path %>"><%=t('cancelled')%></a></li>
    <li role="presentation"><a href="<%= backoffice_concluded_path %>"><%=t('concluded')%></a></li>
    <li role="presentation"><a href="<%= backoffice_approved_path %>"><%=t('approved')%></a></li>
  </ul>

  <div class="container" align="center">
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th><%=t('number_tittle')%></th>
          <th><%=t('delivery_date_tittle')%></th>
          <th><%=t('price_tittle')%></th>
          <th><%=t('obs_tittle')%></th>
          <th><%=t('details_tittle')%></th>
        </tr>
        </thead>
        <% @orders.each do |order| %>
            <tbody>
            <tr>
              <td><%= h order.id %></td>
              <td><%= h order.delivery_date.strftime('%d-%m-%Y') rescue nil %></td>
              <td><%= h number_to_currency(order.price, unit: 'â‚¬', separator: ',', delimiter: '.') %></td>
              <td><%= h order.obs %></td>
              <td><%= link_to t('details_tittle'), backoffice_view_path(order.id) %></td>
        <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>