<!DOCTYPE html>
<html>
  <style>
    footer {
      padding: 5px;
      background-color: whitesmoke;
    }

      .raw content {height: 450px}
  </style>

  <head>
    <title>JoiaDaEuropa</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- NAVBAR
================================================== -->
  <div class="navbar-wrapper">
      <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
      <div class="container">

          <div class="navbar navbar-inverse">
              <div class="navbar-inner">
                  <a class="brand" href="/"><img src="<%= asset_path 'logo.png' %>"></a>
                  <%= link_to 'Home', root_url %>
                  <%= link_to 'História', home_aboutus_url %>
                  <%= link_to 'Missão', home_mission_url %>
                  <%= link_to 'Contactos', home_contacts_url %>
                  <%= link_to 'News', home_news_url %>
                  <%= link_to 'Ligações externas', home_externallinks_url %>
                  <form class="navbar-form navbar-right" role="search">
                      <div class="form-group">
                          <input type="text" class="form-control" placeholder="Search">
                      </div>
                      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                  </form>
              </div><!-- /.navbar-inner -->
          </div><!-- /.navbar -->

        <div class="col-md-3">
          <%= link_to 'PT', '/?lang=pt' %>
          <span>|</span>
          <%= link_to 'EN', '/?lang=en' %>
        </div>

          <div class="pull-right">
            <% if current_user %>
                <%= link_to 'Client Area', client_area_index_url %>
                <%= link_to 'My Profile', profile_index_path %>
                <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete'} %>
            <% else %>
                <%= link_to 'Sign In', new_user_session_path %>
            <% end %>
          </div>

      </div> <!-- /.container -->
  </div><!-- /.navbar-wrapper -->

    <%= yield %>



    <% if notice %>
    <div class="alert alert-info" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
    <% end %>
    <% if alert %>
    <div class="alert alert-warning" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
    <% end %>



    <!-- FOOTER -->
    <footer class="footer navbar-fixed-bottom">

        <p class="pull-right"><a href="http://www.facebook.com/pages/Joia-Da-Europa/259949700834272"><img src="<%= asset_path 'facebook.png' %>"></a>
          <a href="https://pt.linkedin.com/in/joia-europa-61a96ab7"><img src="<%= asset_path 'linkedin.png' %>"></a></p>

        <li style="text-align: center">
          <p>&copy; Jóia da Europa Unipessoal, Lda.</p>
        </li>

    </footer>
  </body>
</html>
