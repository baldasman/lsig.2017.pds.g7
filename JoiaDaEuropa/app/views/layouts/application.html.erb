<!DOCTYPE html>
<html>
  <head>
    <title>JoiaDaEuropa</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <!-- NAVBAR
================================================== -->
  <div class="navbar-wrapper">
      <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
      <div class="container">

          <div class="navbar navbar-inverse">
              <div class="navbar-inner">
                  <a class="brand" href="/"><img src="<%= asset_path 'logo.png' %>"></a>
                  <a class="brand" href="#">História</a>
                  <a class="brand" href="#">Missão</a>
                  <a class="brand" href="#">Contactos</a>
                  <a class="brand" href="#">Notícias</a>
                  <a class="brand" href="#">Ligações Externas</a>
                  <form class="navbar-form navbar-right" role="search">
                      <div class="form-group">
                          <input type="text" class="form-control" placeholder="Search">
                      </div>
                      <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                  </form>

                  <div class="col-md-3">
                      <%= link_to 'PT', '/?lang=pt' %>
                      <span>|</span>
                      <%= link_to 'EN', '/?lang=en' %>
                  </div>
              </div><!-- /.navbar-inner -->
          </div><!-- /.navbar -->

          <div class="col-md-3">
            <% if current_user %>
                <%= link_to 'Client Area', client_area_index_url %>
                <%= link_to 'My Profile', profile_index_path %>
                <%= link_to 'Sign Out', destroy_user_session_path, {method: 'delete'} %>
            <% else %>
                <%= link_to 'Sign In', new_user_session_path %>
            <% end %>
          </div>

      </div> <!-- /.container -->
  </div><!-- /.navbar-wrapper -->

    <%= yield %>



    <% if notice %>
    <div class="alert alert-info" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
    <% end %>
    <% if alert %>
    <div class="alert alert-warning" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
    <% end %>

    <!-- FOOTER -->
    <footer>
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; 2013 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
    </footer>
  </body>
</html>
