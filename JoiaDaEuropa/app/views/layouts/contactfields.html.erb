<%= f.fields_for :user_profiles do |contact|%>

    <%= contact.text_field :name, placeholder: "Nome", :class => "form-control" %>
    <%= contact.text_field :gender, placeholder: "Género", :class => "form-control" %>
    <%= contact.text_field :age, placeholder: "Idade", :class => "form-control" %>
    <%= contact.text_field :address, placeholder: "Address", :class => "form-control" %>
    <%= contact.text_field :vat, placeholder: "VAT", :class => "form-control" %>
    <%= contact.text_field :tel_number, placeholder: "Telemóvel", :class => "form-control" %>
    <%= contact.hidden_field :user_profiles_id, value: current_user_profiles.id %>
<% end %>

